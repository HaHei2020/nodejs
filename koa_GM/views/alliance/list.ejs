<style>
    h3 {
        margin-top: 20px;
    }
</style>
<% if (playerManage === 'T') { %>
<h3>联盟管理</h3>
<hr />
<form action="/alliance/list" method="post" name="allianceManage" id="allianceManage">
    <p>
        <label for="zoneId">区服</label>
        <select name="zoneId" id="zoneId">
            <option value="10001" selected>10001</option>
            <option value="10002">10002</option>
            <option value="10003">10003</option>
            <option value="10004">10004</option>
            <option value="10005">10005</option>
            <option value="10006">10006</option>
            <option value="10007">10007</option>
        </select>
    </p>
    <p>
        <label for="allianceName">联盟名称</label>
        <input type="text" name="allianceName" id="allianceName" style="width: 180px;" value="<%= locals.allianceName %>">
        <button type="submit" name="queryAllianceBtn" id="queryAllianceBtn">查询信息</button>
    </p>
</form>

<% if (locals.queryResult === 1) { %>
<% include alliance_list_table.ejs %>
<% } %>

<% } else { %>
<script>
    alert('没有相关权限！');
</script>
<% } %>
<script src="/javascripts/alliance.js"></script>

