<style>
    input {
        margin-left: 10px;
    }

    #checkboxList > li {
        float: left;
    }

    #checkboxList {
        margin-left: 60px;
        margin-top: 10px;
    }

    .clearfix:after {
        content: '.';
        height: 0;
        width: 0;
        visibility: hidden;
        overflow: hidden;
        clear: both;
    }

    button {
        cursor: pointer;
    }
